<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    {% include '::_head.html.twig' %}

    <body>
        <div id="wrapper" class="sidebars-right">

            <nav class="top-nav">
                {{ knp_menu('event') }}
            </nav>
            
            <header id="header">
                <div class="wrap">
                    <div class="logo">
                        <a class="custom" href="{{ path('event_show', {'event_slug': event.slug } )}}" title="{{ event.title }}">
                            <img src="{{ event.logo }}" width="120" height="129" alt="" />
                        </a>
                    </div><!-- div.logo -->
                    <div class="event-head-text">{{ event.title|raw }}</div>
                </div>
            </header><!-- #header-->

            <nav class="event-nav">
                <div class="wrap">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') == false %}
                        <div class="reg-button-hold">
                            <a class="reg-button" href="{{ path('fos_user_registration_register') }}">
                                Зарегистрироваться
                            </a>
                        </div>
                    {% endif %}

                    {{ knp_menu('event_sub') }}
                </div>
            </nav>

            <section id="middle">

                <div id="container">
                    <div id="content">
                        {% block content %}{% endblock %}
                    </div><!-- #content-->
                </div><!-- #container-->

                <aside id="side-right">
                    {% include "::_sponsors.html.twig" %}
                </aside><!-- #side-right -->

            </section><!-- #middle-->

        </div><!-- #wrapper -->

        {% include '::_footer.html.twig' %}

    </body>
</html>