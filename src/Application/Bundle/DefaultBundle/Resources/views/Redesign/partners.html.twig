{% if partners %}
<!--BEGIN partners-->
<section class="partners">
    <div class="container container--sm">
    {% if partners[1] is defined %}
        {% for ctgname, partners in partners[1] %}
        <div class="partners__box">
            <div class="partners__title">{{ ctgname }}</div>
            <ul class="partners__items">
            {% for partner in partners %}
                {% include '@ApplicationDefault/Redesign/partner.html.twig' with {'partner': partner} %}
            {% endfor %}
            </ul>
        </div>
        {% endfor %}
    {% endif %}
    {% if partners[0] is defined %}
        {% set class = 'right' %}
        <div class="partners__box">
            {% for ctgname, partners in partners[0] %}
                {% if class == 'left' %}
                    {% set class = 'right' %}
                {% else %}
                    {% set class = 'left' %}
                <div class="partners__cols">
                {% endif %}
                    <div class="partners__{{ class }}">
                        <div class="partners__title">{{ ctgname }}</div>
                        <ul class="partners__items">
                        {% for partner in partners %}
                            {% include '@ApplicationDefault/Redesign/partner.html.twig' with {'partner': partner} %}
                        {% endfor %}
                        </ul>
                    </div>
                {% if class == 'right' %}
                 </div>
                {% endif %}
           {% endfor %}
        </div>
    {% endif %}
    </div>
</section>
<!--END partners-->
{% endif %}