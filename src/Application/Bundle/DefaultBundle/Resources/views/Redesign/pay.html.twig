<input type="hidden" name="ik_co_id" value="{{ data.ik_co_id }}" />
<input type="hidden" name="ik_pm_no" value="{{ payment.id }}" />
<input type="hidden" name="ik_am" value="{{ payment.amount }}" />
<input type="hidden" name="ik_desc" value="{{ data.ik_desc|escape }}" />
<input type="hidden" name="ik_loc" value="ru" />
<input type="hidden" name="ik_sign" value="{{ data.ik_sign }}" />

{% for ticket in payment.tickets %}
    {% include '@ApplicationDefault/Redesign/user.payment.html.twig' with {'event': event, 'payment': payment, 'ticket': ticket} %}
{% endfor %}

<div id="payment-add-user" class="form-add">
    <div class="form-add__hint"> {{ 'pay.event.pay_for_other'|trans }}
        <a id="cancel-add-user" href="#" class="btn-link">{{ 'cancel.title'|trans }}</a>
    </div>
    <div class="form-row">
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="form-group">
                <label class="form-label" for="">{{ 'user.name.title'|trans }}</label>
                <input class="input" type="text" name="name" value="">
            </div>
        </div>
        <div class="form-col form-col--col-6 form-col--xs-12">
            <div class="form-group">
                <label class="form-label" for="">{{ 'user.surname.title'|trans }}</label>
                <input class="input" type="text" name="surname" value="">
            </div>
        </div>
    </div>
    <div class="form-row form-row--align-bottom">
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="form-group">
                <label class="form-label" for="">{{ 'user.email.title'|trans }}</label>
                <input class="input" type="email" name="email" value="">
            </div>
        </div>
        <div class="form-col form-col--6 form-col--xs-12">
            <button class="btn btn--secondary btn--md form-col__btn">{{ 'add.title'|trans }}</button>
        </div>
    </div>
</div>

<div id="add-promo-code" class="form-add">
    <div class="form-add__hint"> {{ 'pay.enter_promo.title'|trans }}
        <a id="cancel-promo-code" href="#" class="btn-link">{{ 'cancel.title'|trans }}</a>
    </div>
    <div class="form-row form-row--align-bottom">
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="form-group">
                <label class="form-label" for="">{{ 'pay.event.cupon'|trans }}</label>
                <input class="input" type="text" value="">
            </div>
        </div>
        <div class="form-col form-col--6 form-col--xs-12">
            <button class="btn btn--secondary btn--md form-col__btn">{{ 'add.title'|trans }}</button>
        </div>
    </div>
</div>

<div class="payment-info">
    <div class="payment-info__left">
        <div class="payment-info__btn-link">
            <a id="add-user-trigger" href="#" class="btn-link">{{ 'pay.event.one_more_participants'|trans }}</a>
        </div>
        <div class="payment-info__btn-link">
            <a id="promo-code-trigger" href="#" class="btn-link">{{ 'pay.i_have_promo.title'|trans }}</a>
        </div>
    </div>
    <div class="payment-info__right">
        {% if payment.fwdaysAmount > 0 %}
            <div class="payment-info__total">{{ 'pay.sum.bold.title'|trans({'%sum%':payment.amount+payment.fwdaysAmount}) }}</div>
            <div class="payment-info__total">{{ 'pay.bonus.bold.title'|trans({'%sum%':payment.fwdaysAmount}) }}</div>
            <div class="payment-info__total">{{ 'pay.sum_for_pay.bold.title'|trans({'%sum%':payment.amount}) }}</div>
        {% else %}
            <div class="payment-info__total">{{ 'pay.sum.bold.title'|trans({'%sum%':payment.amount}) }}</div>
        {% endif %}
    </div>
</div>

<div class="form-row form-row--align-bottom">
    <div class="form-col form-col--6 form-col--xs-12">
        <div class="form-group">
            <label class="form-label" for="">{{ 'user.phone.title'|trans }}</label>
            <input class="input mask-phone-input--js" type="tel" value="{{ app.user.phone }}">
        </div>
    </div>
    <div class="form-col form-col--6 form-col--xs-12">
        <button class="btn btn--primary btn--lg form-col__btn" type="submit">{{ 'ticket.status.pay'|trans }}</button>
    </div>
</div>