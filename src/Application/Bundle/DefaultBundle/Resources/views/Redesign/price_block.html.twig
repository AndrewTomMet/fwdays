{% if currentPrice > ticket.amount %}
<div class="cost cost--last price-list__item">
    <div class="cost__type">{{ ticket.name }}</div>
    <div class="cost__tickets">
        <span class="cost__strike">{{ 'tickets.count'|trans({'%count%': ticket.soldCount}) }}</span>
        <span class="cost__sales">{{ 'sold_out.title'|trans }}</span>
    </div>
    <div class="cost__price">{{ 'payment.price'|trans({'%summ%':ticket.amount}) }}
        {% if ticket.altAmount %}<span class="cost__dollars">{{ ticket.altAmount }}</span>{% endif %}
    </div>
</div>
{% elseif currentPrice < ticket.amount %}
<div class="cost price-list__item">
    <div class="cost__type">{{ ticket.name }}</div>
    {% if ticket.count %}
        <div class="cost__tickets">{{ 'tickets.count'|trans({'%count%': ticket.count}) }}</div>
    {% else %}
        <div class="cost__tickets">{{ 'tickets.other.title'|trans }}</div>
    {% endif %}
    <div class="cost__price">{{ 'payment.price'|trans({'%summ%':ticket.amount}) }}
        {% if ticket.altAmount %}<span class="cost__dollars">{{ ticket.altAmount }}</span>{% endif %}
    </div>
</div>
{% else %}
<div class="cost cost--active price-list__item">
    <div class="cost__type">{{ ticket.name }}</div>
    {% if ticket.count %}
        <div class="cost__tickets">{{ 'tickets.count'|trans({'%count%': ticket.count - ticket.soldCount}) }}</div>
    {% else %}
        <div class="cost__tickets">{{ 'tickets.other.title'|trans }}</div>
    {% endif %}

    <div class="cost__price cost__price--mob">{{ 'payment.price'|trans({'%summ%':ticket.amount}) }}
        {% if ticket.altAmount %}<span class="cost__dollars">{{ ticket.altAmount }}</span>{% endif %}
    </div>
    {% render controller('ApplicationDefaultBundle:Ticket:status', {'event':event, 'position':'price_block' }) %}
    {% render controller('ApplicationDefaultBundle:Ticket:status', {'event':event, 'position':'price_block_mob'}) %}
</div>
{% endif %}
