<form action="{{ path('fos_user_registration_register') }}{{ queryLink }}" method="POST">
    <input type="hidden" id="fos_user_registration_form__token" name="fos_user_registration_form[_token]"
           value="{{ csrf_token('registration') }}"/>
    <div class="form-hint">{{ 'menu.user.registration'|trans }}</div>
    <div class="form-row">
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="form-group">

                <label class="form-label form-label--required"
                       for="fos_user_registration_form_name">{{ 'user.name.title'|trans }}</label>
                <input class="input {% if regForm is defined and regForm.name.vars.errors|length %}input--error{% endif %}" type="text" id="fos_user_registration_form_name"
                       name="fos_user_registration_form[name]" value="{% if regForm is defined and regForm.name.vars.value %}{{ regForm.name.vars.value }}{% endif %}">
                    {% if regForm is defined and regForm.name.vars.errors|length %}<p class="text-error">{{ regForm.name.vars.errors[0].message|trans }}</p>{% endif %}
            </div>
        </div>
        <div class="form-col form-col--6 form-col--xs-12">
            <label class="form-label form-label--required"
                   for="fos_user_registration_form_surname">{{ 'user.surname.title'|trans }}</label>
            <input class="input {% if regForm is defined and regForm.surname.vars.errors|length %}input--error{% endif %}" type="text" id="fos_user_registration_form_surname"
                   name="fos_user_registration_form[surname]" value="{% if regForm is defined and regForm.surname.vars.value %}{{ regForm.surname.vars.value }}{% endif %}">
                    {% if regForm is defined and regForm.surname.vars.errors|length %}<p class="text-error">{{ regForm.surname.vars.errors[0].message|trans }}</p>{% endif %}
        </div>
    </div>
    <div class="form-row">
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="form-group">
                <label class="form-label form-label--required"
                       for="fos_user_registration_form_email">{{ 'user.email.title'|trans }}</label>
                <input class="input {% if regForm is defined and regForm.email.vars.errors|length %}input--error{% endif %}" type="email" id="fos_user_registration_form_email"
                       name="fos_user_registration_form[email]" value="{% if regForm is defined and regForm.email.vars.value %}{{ regForm.email.vars.value }}{% endif %}">
                {% if regForm is defined and regForm.email.vars.errors|length %}<p class="text-error">{{ regForm.email.vars.errors[0].message|trans }}</p>{% endif %}
            </div>
        </div>
        <div class="form-col form-col--6 form-col--xs-12">
            <label class="form-label form-label--required"
                   for="fos_user_registration_form_plainPassword">{{ 'user.password.title'|trans }}</label>
            <div class="input-password">
                <input class="input input-password__field {% if regForm is defined and regForm.plainPassword.vars.errors|length %}input--error{% endif %}" type="password" id="fos_user_registration_form_plainPassword"
                       name="fos_user_registration_form[plainPassword]" value="">
                <i class="input-password__icon icon-eye icon-password--js"></i>
                {% if regForm is defined and regForm.plainPassword.vars.errors|length %}<p class="text-error">{{ regForm.plainPassword.vars.errors[0].message|trans }}</p>{% endif %}
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="form-group">
                <label class="form-label" for="fos_user_registration_form_phone">{{ 'user.phone.title'|trans }}</label>
                <input class="input mask-phone-input--js {% if regForm is defined and regForm.phone.vars.errors|length %}input--error{% endif %}" type="tel" id="fos_user_registration_form_phone"
                       name="fos_user_registration_form[phone]" placeholder="+38" value="{% if regForm is defined and regForm.phone.vars.value %}{{ regForm.phone.vars.value }}{% endif %}">
                {% if regForm is defined and regForm.phone.vars.errors|length %}<p class="text-error">{{ regForm.phone.vars.errors[0].message|trans }}</p>{% endif %}
            </div>
        </div>
    </div>
    <div class="form-row form-row--checkbox">
        <div class="form-col">
            <div class="checkbox">
                <input id="fos_user_registration_form_subscribe" type="checkbox"
                       name="fos_user_registration_form[subscribe]" class="checkbox__input" checked>
                <label for="fos_user_registration_form_subscribe"
                       class="checkbox__label">{{ 'user.subscribe.title'|trans }}</label>
            </div>
        </div>
    </div>
    <div class="form-row form-row--align-center">
        <div class="form-col form-col--6 form-col--xs-12">
            <button class="btn btn--primary btn--lg form-col__btn"
                    type="submit">{{ 'user.create.title'|trans }}</button>
        </div>
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="help-links">
                <div class="help-links__item">
                    <a {% if remodal is not empty and not is_mobile() %}data-remodal-target="{{ remodal }}" href="#"{% else %}href="{{ path('fos_user_security_login') }}"{% endif %} class="form-link">{{ 'user.already_have_account.title'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</form>