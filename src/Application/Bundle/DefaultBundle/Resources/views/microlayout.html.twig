{% if events is not empty %}
    <script type="application/ld+json">
        {% for event in events %}
            {
                "@context":"https://schema.org",
                "@type":"Event",
                "name":"{{ event.name }}",
                "url":"{{ app.request.scheme ~ '://' ~ app.request.httpHost ~ path('event_show', {'eventSlug': event.slug}) }}",
                "startDate":"{{ event.date|date('Y-m-d') }}",
                "location": {
                    "@type": "Place",
                    "name": "{{ event.place }}",
                    "address": {
                    "@type": "PostalAddress",
                        "addressLocality": "{{ event.city }}",
                        "addressRegion": "UA"
                    }
                }
            }
        {% endfor %}
    </script>
{% endif %}
