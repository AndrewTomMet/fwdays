{% extends '::main-no-head.html.twig' %}

{% block content %}
    <h2>Будущие события</h2>

    <table class="conferences-list">
        <tbody>
            {% for event in events %}
                <tr>
                    <td class="conf-logo">
                        <a href="{{ path('event_show', {'slug': event.slug } )}}">
                            <img src="{{ event.logo }}" width="82" height="87" alt="{{ event.title }}">
                        </a>
                    </td>
                    <td class="conf-info">
                        <div class="conf-info-h">26 августа 2011, Киев<br> Экспо Плаза</div>
                        <p>{{ event.description }}</p>
                        <div class="conf-info-links">
                            <a href="{{ path('event_show', {'slug': event.slug } )}}">Детальная информация</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}

        {#<tr><td></td><td><a class="propose-conference-theme" href="# ">Я хочу предложить тему конференции</a></td></tr>#}
        </tbody>
    </table>

