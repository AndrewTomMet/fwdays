<div class="news-list">
    {% for one_news in news %}
    <article class="intro">
        <h2><a href="{{ path('event_news_show', { 'event_slug': event.slug, 'news_slug':one_news.slug }) }}">{{one_news.title }}</a></h2>
        <div class="article-date-rubrics">{{one_news.createdat|date('d M Y') }}</div>
    </article>
    {% endfor %}

    <div class="allnews-link"><a href="{{ path('event_news', { 'event_slug': event.slug }) }}">все новости</a></div>
</div>